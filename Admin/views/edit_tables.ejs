<%- include("./layouts/header.ejs") %>
    <div class="row">

        <div class="container ">
            <form action="/update_table/<%=table[0].id%>" method="post" enctype="multipart/form-data">
                <div class="row bg-light p-5">
                    <div class="col-md-12 my-2 mb-4 bg-light text-center">
                        <h2>Edit Table</h2>
                    </div>
                    <div class="col-md-4 my-2">
                        <label>Table Number:</label>
                        <input class="form-control" readonly value="<%=table[0].table_number%>" type="number"
                            name="table_number" required>
                    </div>
                    <div class="col-md-4 my-2">
                        <label>Type of Table:</label>
                        <select name="table_category" class="form-control">
                            <option selected disabled>Select Category</option>
                            <% for(i=0;i<categories.length;i++){%>
                                <option <%=categories[i].cat_id==table[0].table_category?'selected':''%> value="<%=categories[i].cat_id %>"><%=categories[i].cat_name%>
                                </option>
                                <%}%>
                        </select>
                    </div>
                    <div class="col-md-4 my-2">
                        <label>Max Capacity of Table:</label>
                        <input class="form-control" value="<%=table[0].capacity%>" type="number" name="capacity"
                            required>
                    </div>
                    <div class="col-md-6 my-2">
                        <label>Price (per head) &#8377;:</label>
                        <input class="form-control" value="<%=table[0].price_per%>" type="text" name="price_per"
                            required>
                    </div>
                    <div class="col-md-4 my-2">
                        <label>Is Available:</label>
                        <select name="is_available" class="form-control">
                            <option <%=table[0].is_available=="yes"?"selected":"" %> value="yes">Yes</option>
                            <option <%=table[0].is_available=="no"?"selected":"" %> value="no">No</option>
                        </select>
                    </div>
                    <div class="col-md-12 my-4 text-center">
                        <button type="submit" class="btn btn-md btn-primary btn-lg">Save Changes</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <%- include("./layouts/footer.ejs") %>