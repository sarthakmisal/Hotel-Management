    <div class="container sure_print">
        <div class="row">
            <div class="col-md-12">
                <div class="row d-flex" style="justify-content: space-between;">
                    <div class="col-md-4 col-6">
                        <img src="/uploads/<%=about[0].logo%>" class="my-auto" width="200vw" alt="">
                    </div>
                    <div class="col-md-4 col-4">
                        <h1 style="font-size: 6rem;" class="text-uppercase mt-5">Invoice</h1>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="row d-flex" style="justify-content: space-between;">
                    <div class="col-md-5 ml-5">
                        <h3 class="text-uppercase fw-bolder">Billed to : </h3>
                        <p class="h5">
                            <%=order[0].customer_name%>
                        </p>
                        <p class="h5">
                            <%=order[0].email%>
                        </p>

                    </div>
                    <div class="col-md-3 mr-5">
                        <p class="fw-bold h3 text-right">Invoice No : SN02<%- order[0].customer_name.substring(0,2).toUpperCase()%><%=order[0].id%></p>
                        <p class="fw-bold h3 text-right"><%- (order[0].date+"").substring(0,(order[0].date+"").length/2-6) %></p>
                    </div>
                </div>
            </div>
            <div class="col-md-12 my-4">
                <table class="table table-hover ">
                    <thead class="thead-dark">
                        <tr>
                            <th class="fw-bolder">Item</th>
                            <th class="fw-bolder">Quantity</th>
                            <th class="fw-bolder">Unit Price</th>
                            <th class="fw-bolder">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                       <%
                       total=0
                       for(i=0;i<order.length;i++){
                        total+=order[i].quantity*order[i].dish_price
                        %>
                        <tr>
                            <td><%=order[i].dish_name%></td>
                            <td><%=order[i].quantity%></td>
                            <td><%=order[i].dish_price%></td>
                            <td>&#8377;&nbsp;<%=order[i].quantity*order[i].dish_price%></td>
                        </tr>
                        <%}%>
                        <tr style="border-bottom: 5px solid black;">
                            <td></td>
                            <td></td>
                            <th class="text-center"><span class="fw-bolder">Service Charge</span></th>
                            <th class="text-left"><span class="fw-bolder">&#8377;&nbsp;<%=order[0].total%></span></th>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <th class="text-center"><span class="fw-bolder text-uppercase">Sub Total</span></th>
                            <th class="text-left"><span class="fw-bolder ">&#8377;&nbsp;<%=order[0].total+total%></span></th>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-12 text-center">
                <button onclick="print()" class="no-print btn  btn-primary">Print</button>
            </div>
        </div>
    </div>
